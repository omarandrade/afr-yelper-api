{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "commonjs": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "spread": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules" : {
        "no-console": "off",
        "strict": ["error", "global"],
        "curly": "warn"
    }
}